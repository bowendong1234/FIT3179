{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "params": [
        {
            "name": "FRP_above",
            "value": 0,
            "bind": {
                "input": "range",
                "min": 0,
                "max": 10000,
                "step": 50,
                "name": "Only consider wildfires with FRP greater than: "
            }
        }
    ],
    "width": 800,
    "height": 450,
    "title": "Australian Bushfires in 2023",
    "projection": {
        "type": "equirectangular"
    },
    "layer": [
        {
            "data": {
                "url": "ausmap_graticle.topojson.json",
                "format": {
                    "type": "topojson",
                    "feature": "ne_110m_graticules_5"
                }
            },
            "mark": {
                "type": "geoshape",
                "fill": "lightgray",
                "stroke": "lightgray"
            }
        },
        {
            "data": {
                "url": "ausmap_graticle.topojson.json",
                "format": {
                    "type": "topojson",
                    "feature": "ne_110m_admin_0_countries"
                }
            },
            "mark": {
                "type": "geoshape",
                "fill": "#E1DEE3",
                "stroke": "lightgray"
            }
        },
        {
            "data": {
                "url": "modis_2023_Australia.csv"
            },
            "mark": {
                "type": "square",
                "size": 26,
                "tooltip": {
                    "content": "data"
                }
            },
            "encoding": {
                "x": {
                    "field": "longitude",
                    "type": "quantitative",
                    "bin": {
                        "step": 0.5
                    },
                    "scale": {
                        "domain": [
                            101.5,
                            162.7
                        ]
                    },
                    "axis": null
                },
                "y": {
                    "field": "latitude",
                    "type": "quantitative",
                    "bin": {
                        "step": 0.5
                    },
                    "scale": {
                        "domain": [
                            -45,
                            -11
                        ]
                    },
                    "axis": null
                },
                "color": {
                    "field": "frp",
                    "type": "quantitative",
                    "aggregate": "sum",
                    "scale": {
                        "type": "sqrt",
                        "range": [
                            "orange",
                            "red",
                            "darkred"
                        ]
                    },
                    "legend": {
                        "title": "Total Fire Radiative Power (MWs)",
                        "orient": "right"
                    }
                },
                "tooltip": [
                    {
                        "field": "bin_step_0_5_latitude",
                        "type": "quantitative",
                        "title": "Latitude Start"
                    },
                    {
                        "field": "bin_step_0_5_latitude_end",
                        "type": "quantitative",
                        "title": "Latitude End"
                    },
                    {
                        "field": "bin_step_0_5_longitude",
                        "type": "quantitative",
                        "title": "Longitude Start"
                    },
                    {
                        "field": "bin_step_0_5_longitude_end",
                        "type": "quantitative",
                        "title": "Longitude End"
                    },
                    {
                        "field": "sum_frp",
                        "type": "quantitative",
                        "title": "Total Fire Radiative Power (MWs)"
                    }
                ]
            },
            "transform": [
                {
                    "filter": "datum.frp > FRP_above"
                }
            ]
        }
    ],
    "config": {
        "view": {
            "stroke": null
        }
    }
}