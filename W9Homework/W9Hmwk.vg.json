{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 450,
    "title": "Australian Bushfires in 2023",
    "projection": {
        "type": "equirectangular"
    },
    "layer": [
        {
            "data": {
                "url": "ausmap_graticle.topojson.json",
                "format": {
                    "type": "topojson",
                    "feature": "ne_110m_graticules_5"
                }
            },
            "mark": {
                "type": "geoshape",
                "fill": "lightgray",
                "stroke": "lightgray"
            }
        },
        {
            "data": {
                "url": "ausmap_graticle.topojson.json",
                "format": {
                    "type": "topojson",
                    "feature": "ne_110m_admin_0_countries"
                }
            },
            "mark": {
                "type": "geoshape",
                "fill": "#E1DEE3",
                "stroke": "lightgray"
            }
        },
        {
            "data": {
                "url": "modis_2023_Australia.csv"
            },
            "mark": {
                "type": "square",
                "size": 20,
                "tooltip": {
                    "content": "data"
                }
            },
            "encoding": {
                "x": {
                    "field": "longitude",
                    "type": "quantitative",
                    "bin": {
                        "step": 0.5
                    },
                    "scale": {
                        "domain": [
                            101.5,
                            162.7
                        ]
                    },
                    "axis": null
                },
                "y": {
                    "field": "latitude",
                    "type": "quantitative",
                    "bin": {
                        "step": 0.5
                    },
                    "scale": {
                        "domain": [
                            -45,
                            -11
                        ]
                    },
                    "axis": null
                },
                "color": {
                    "field": "frp",
                    "type": "quantitative",
                    "aggregate": "sum",
                    "scale": {
                        "type": "sqrt",
                        "range": ["orange", "red", "darkred"] 
                    },
                    "legend": {
                      "title": "Fire Radiative Power (FRP) Total",
                      "orient": "right"
                    }
                },
                "tooltip": [
                  {"field": "bin_step_0_5_latitude", "type": "quantitative", "title": "Latitude Start"},
                  {"field": "bin_step_0_5_latitude_end", "type": "quantitative", "title": "Latitude End"},
                  {"field": "bin_step_0_5_longitude", "type": "quantitative", "title": "Longitude Start"},
                  {"field": "bin_step_0_5_longitude_end", "type": "quantitative", "title": "Longitude End"},
                  {"field": "sum_frp", "type": "quantitative", "title": "Fire Radiative Power (total)"}
                ]
            }
        }
    ],
    "config": {
      "view": {
        "stroke": null
      }
    }
}